<% if @events and !@events.empty? %>
  <div class="row">
  <% @events.each do |event| %>

    <div class="well span6 offset3">
      <div class="event-title text-center">
        <h3><%= event['title'] %></h3>
      </div>

      <div class="time text-center">
        <%= DateTime.iso8601(event['datetime_local']).strftime("%I:%M %p") %>
      </div>

      <div class="coordinates hidden">
        <%= event['venue']['location'] %>
      </div>

      <div class="venue text-center">
        <h5><%= event['venue']['name'] %></h5>
      </div>

      <div class="tickets text-center">
        <a class="btn btn-mini btn-info" href="<%= event['url'] %>">tickets</a>
      </div>
    </div>
  <% end %>
  </div>

<% elsif !@events.nil? %>
  <p>Sorry, no games today<p>
<% end %>

<% if Rails.env.development? %>
  <h5>Debug Info</h5>
  <pre>
    <%= @query.query if @query %>
    <%= @query.attributes if @query%>
    <%= PP.pp(@events, "") if @events%>
  </pre>
<% end %>
